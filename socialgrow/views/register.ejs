<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>SocialGrow Sign Up</title>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="/js/jquery.serializejson.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<style>
    .gradient-custom-2 {
      /* fallback for old browsers */
      background: #046b72;

      /* Chrome 10-25, Safari 5.1-6 */
      background: -webkit-linear-gradient(to right, rgb(15, 203, 172), rgba(0, 19, 33, 1));

      /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      background: linear-gradient(to right, rgb(15, 203, 172), rgba(0, 19, 33, 1))
    }

    @media (min-width: 768px) {
      .gradient-form {
        height: 100vh !important;
      }
    }

    @media (min-width: 769px) {
      .gradient-custom-2 {
        border-top-right-radius: .3rem;
        border-bottom-right-radius: .3rem;
      }
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg" style="background-color: #001321;">
    <div class="container-fluid">
      <a class="navbar-brand" style="color: white; font-size: 150%" href="../">SocialGrow</a>
    </div>
  </nav>

  <div class="alert-danger m-3 text-center fs-3" id="error"></div>
  <div class="alert-primary m-3 text-center fs-3" id="success"></div>

  <section class="h-100 gradient-form" style="background-color: white;">
    <div class="container py-3 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body p-md-5 mx-md-4">

                  <div class="text-center">
                    <h1 class="pb-5 pt-3">Sign up for SocialGrow.</h1>
                  </div>

                  <form id="register-form">

                    <div class="form-outline mt-3 mb-4">
                      <input name="email" class="form-control" placeholder="Email address" />
                    </div>

                    <div class="form-outline mb-4">
                      <input name="password" class="form-control" placeholder="Password" />
                    </div>

                    <div class="form-outline mb-4">
                      <input name="confirm" class="form-control" placeholder="Confirm Password" />
                    </div>

                    <div class="text-center pt-1 mb-5 pb-1">
                      <input class="btn btn-primary btn-block fa-lg m-3" type="submit" value="Sign up" style="background-color: #116466;"></input>
                    </div>

                  </form>

                </div>
              </div>
              <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                  <h4 class="mb-4">We are more than just a service.</h4>
                  <p class="small mb-0">We are a team working together to bring you solutions to grow your influence, to increase your clout, and to expand what you thought was possible.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

<script>

  $( "#register-form" ).submit(async function( event )
  {
    try
    {
      event.preventDefault();
      var obj = $('#register-form').serializeJSON();
      const registerAttempt = await axios.post("/register", obj);
      // console.log("Successfully signed up.");
      $('#success').text("Successfully signed up.");
      $('#error').text("")
      window.location.href="/dashboard";
    } catch (e)
    {
      // console.log(e.response.data.status);
      $('#error').text(e.response.data.status);
      $('#success').text("");
    }
  });

</script>

</html>
